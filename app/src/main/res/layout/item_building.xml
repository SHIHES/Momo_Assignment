<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_building_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="@dimen/border"
        android:layout_marginTop="@dimen/border"
        android:layout_marginBottom="@dimen/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_building_title"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/border"
        app:layout_constraintStart_toEndOf="@+id/item_building_image"
        app:layout_constraintTop_toTopOf="@+id/item_building_image" />

    <TextView
        android:id="@+id/item_building_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:ems="12"
        app:layout_constraintStart_toEndOf="@+id/item_building_image"
        app:layout_constraintTop_toBottomOf="@+id/item_building_title" />

    <TextView
        android:id="@+id/item_building_restDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_building_image"
        app:layout_constraintStart_toEndOf="@+id/item_building_image"
        app:layout_constraintTop_toBottomOf="@+id/item_building_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>